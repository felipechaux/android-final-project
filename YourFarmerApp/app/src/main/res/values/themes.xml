<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YourFarmerApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blueDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/greenPrimary</item>
    </style>

    <style name="Theme.YourFarmerApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="InputForm" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">@dimen/size_18</item>
    </style>

    <style name="LoginInputAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/size_18</item>
        <item name="android:fontFamily">@font/chalk_duster</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NormalInputAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/size_18</item>
        <item name="android:fontFamily">@font/chalk_duster</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="InputAppearance.Medium" parent="NormalInputAppearance">
        <item name="android:textSize">@dimen/size_30</item>
    </style>

    <style name="ButtonShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
    </style>

    <style name="NormalButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/ButtonShape</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="fontFamily">@font/gilroy_bold</item>
        <item name="android:textSize">@dimen/size_18</item>
        <item name="android:insetTop">@dimen/button_inset</item>
        <item name="android:insetBottom">@dimen/button_inset</item>
    </style>

    <style name="LoginButton" parent="NormalButton">
        <item name="android:translationZ" tools:ignore="NewApi">@dimen/dimen_20</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">@color/greenDark</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/greenDark</item>

        <item name="android:textColor">@color/black</item>
        <item name="strokeColor">@color/black</item>
        <item name="fontFamily">@font/chalk_duster</item>
    </style>
</resources>