<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.IntroThreeFragment">

    <TextView
        android:id="@+id/text_map_help"
        style="@style/InputAppearance.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_60"
        android:gravity="center"
        android:text="@string/map_help_your_customers"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_map"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_400"
        android:layout_marginTop="@dimen/margin_20"
        android:background="@color/white"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/img_map_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_map_help" />

</androidx.constraintlayout.widget.ConstraintLayout>